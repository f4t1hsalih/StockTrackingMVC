@model StockTrackingMVC.Models.Entity.tbl_staff

@{
    ViewBag.Title = "Personel Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin-top:10px">Personel Bilgileri Güncelleme</h2>
<hr />
@using (Html.BeginForm("UpdateStaff", "Staff", FormMethod.Post))
{
    @Html.HiddenFor(model => model.stf_id)
    <div class="form-group">
        @Html.LabelFor(model => model.stf_name, "Adı", htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.stf_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Adı..." } })
        @Html.ValidationMessageFor(x => x.stf_name, "", new { @style = "color:red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.stf_surname, "Soyadı", htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.stf_surname, new { htmlAttributes = new { @class = "form-control", placeholder = "Soyadı..." } })
        @Html.ValidationMessageFor(x => x.stf_surname, "", new { @style = "color:red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.stf_department, "Departmanı", htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.stf_department, new { htmlAttributes = new { @class = "form-control", placeholder = "Departmanı..." } })
        @Html.ValidationMessageFor(x => x.stf_department, "", new { @style = "color:red" })
    </div>

    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-success" />
    </div>
}


