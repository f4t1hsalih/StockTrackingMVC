@model StockTrackingMVC.Models.Entity.tbl_categories

@{
    ViewBag.Title = "Kategori Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin-top:10px">Kategori Güncelle</h2>
<hr />
@using (Html.BeginForm("UpdateCategory","Category",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ctg_id)
    <div class="form-group">
        @Html.Label("Kategori Adı", htmlAttributes: new { @class = "control-label", placeholder = "Kategori Adı..." })
        @Html.EditorFor(model => model.ctg_name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-success" />
    </div>
}
