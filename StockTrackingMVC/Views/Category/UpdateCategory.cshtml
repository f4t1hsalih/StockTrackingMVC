@model StockTrackingMVC.Models.Entity.tbl_categories

@{
    ViewBag.Title = "Kategori Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin-top:10px">Kategori Güncelle</h2>
<hr />
@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{
    @Html.HiddenFor(model => model.ctg_id)
    <div class="form-group">
        @Html.Label("Kategori Adı", htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.ctg_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Kategori Adı..." } })
        @Html.ValidationMessageFor(x => x.ctg_name, "", new { @style = "color:red" })
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-success" />
    </div>
}
