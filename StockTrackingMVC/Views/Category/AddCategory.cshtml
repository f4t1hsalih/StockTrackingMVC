@model StockTrackingMVC.Models.Entity.tbl_categories

@{
    ViewBag.Title = "Kategori Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin-top:10px">Categori Oluştur</h2>
<hr />

@using (Html.BeginForm("AddCategory","Category",FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Categori Adı", htmlAttributes: new { @class = "control-label"})
        @Html.EditorFor(model => model.ctg_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Kategori Adı..." } })
    </div>

    <div class="form-group">
        <input type="submit" value="Oluştur" class="btn btn-success" />
    </div>
}

