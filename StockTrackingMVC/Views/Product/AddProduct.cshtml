@model StockTrackingMVC.Models.Entity.tbl_products

@{
    ViewBag.Title = "Ürün Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin-top:10px">Ürün Oluştur</h2>
<hr />

@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.prd_name, "Ürün Adı", htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.prd_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Ürün Adı..." } })
        @Html.ValidationMessageFor(x => x.prd_name, "", new { @style = "color:red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.prd_brand, "Ürün Markası", htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.prd_brand, new { htmlAttributes = new { @class = "form-control", placeholder = "Ürün Markası..." } })
        @Html.ValidationMessageFor(x => x.prd_brand, "", new { @style = "color:red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.prd_stock, "Ürün Stoğu", htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.prd_stock, new { htmlAttributes = new { @class = "form-control", placeholder = "Ürün Stoğu...", type = "number" } })
        @Html.ValidationMessageFor(x => x.prd_stock, "", new { @style = "color:red" })

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.prd_purchasePrice, "Alış Fiyatı", htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.prd_purchasePrice, new { htmlAttributes = new { @class = "form-control", placeholder = "Alış Fiyatı...", type = "number" } })
        @Html.ValidationMessageFor(x => x.prd_purchasePrice, "", new { @style = "color:red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.prd_salePrice, "Satış Fiyatı", htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.prd_salePrice, new { htmlAttributes = new { @class = "form-control", placeholder = "Satış Fiyatı...", type = "number" } })
        @Html.ValidationMessageFor(x => x.prd_salePrice, "", new { @style = "color:red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.prd_ctg_id, "Ürün Kategorisi", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.prd_ctg_id, ViewBag.CategoriesForProduct as SelectList, "Kategori Seçiniz", new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <input type="submit" value="Oluştur" class="btn btn-success" />
    </div>
}
