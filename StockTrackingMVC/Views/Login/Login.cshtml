@model StockTrackingMVC.Models.Entity.tbl_admins

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Login Panel</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- custom style sheet -->
    <link href="~/weblogin/css/style.css" rel="stylesheet" type="text/css" />
    <!-- /custom style sheet -->
    <!-- fontawesome css -->
    <link href="~/weblogin/css/fontawesome-all.css" rel="stylesheet" />
    <!-- /fontawesome css -->
    <!-- google fonts-->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- /google fonts-->
</head>

<body>
    <h1>Stok Takip Projesi</h1>
    <div class="w3l-login-form">
        <h2>Giriş Paneli</h2>
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="w3l-form-group">
                @Html.LabelFor(m => m.adm_username, "Kullanıcı Adı:")
                <div class="group">
                    <i class="fas fa-user"></i>
                    @Html.TextBoxFor(m => m.adm_username, new { @class = "form-control", @placeholder = "Kullanıcı Adı" })
                </div>
            </div>
            <div class="w3l-form-group">
                @Html.LabelFor(m => m.adm_password, "Şifre:")
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    @Html.PasswordFor(m => m.adm_password, new { @class = "form-control", @placeholder = "Şifre" })
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Giriş Yap</button>

            if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mt-3">
                    @Html.ValidationSummary(true)
                </div>
            }

        }
    </div>

    <!-- jQuery ve diğer JS kütüphaneleri -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

</body>

</html>
